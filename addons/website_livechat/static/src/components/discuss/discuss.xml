<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Discuss.content" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o_Discuss_thread')]" position="before">
            <t t-if="discuss.__mfield_thread(mself).__mfield_visitor(mself)">
                <VisitorBanner
                    visitorLocalId="discuss.__mfield_thread(mself).__mfield_visitor(mself).localId"
                />
            </t>
        </xpath>
    </t>
</templates>
