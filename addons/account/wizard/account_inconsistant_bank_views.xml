<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_inconsistant_bank_wizard_form" model="ir.ui.view">
            <field name="name">account.inconsistant.bank.wizard.form</field>
            <field name="model">account.inconsistant.bank.wizard</field>
            <field name="groups_id" eval="[(4,ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <form string="Inconsistant Bank Accounts">
                    <field name="nb_create_bank_account" invisible="1" />
                    <div>Bank account found in the bill is different than the partner bank account. Would you like to assign it to the partner?  In case of doubt, verify with your partner.
                    </div>
                    <field name="inconsistant_banks_line_ids" widget="one2many_list">
                        <tree string="Inconsistant Bank Account" create="0" editable="top" >
                            <field name="inconsistant_bank_id" invisible="1"/>
                            <field name="partner_id" readonly="1" force_save="1"/>
                            <field name="acc_number" readonly="1" force_save="1"/>
                            <field name="should_create"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_done" string="Assign selected to vendors, it's safe" type="object" class="oe_highlight" attrs="{'invisible': [('nb_create_bank_account', '=', 0)]}"/>
                        <button name="action_discard" string="Discard" type="object" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>