<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div t-name="wowl.ControlPanel" class="o_control_panel" owl="1">
        <ol class="breadcrumb">
          <li t-foreach="breadcrumbs" t-as="breadcrumb" class="breadcrumb-item">
            <a t-if="!breadcrumb_last" href="#" t-on-click.prevent="_onBreadcrumbClicked(breadcrumb.jsId)">
              <t t-esc="breadcrumb.name"/>
            </a>
            <t t-else=""><t t-esc="breadcrumb.name"/></t>
          </li>
        </ol>
        <div class="o_action_buttons">
          <button t-on-click="_onExecuteAction(35)">Open Apps</button>
          <button t-on-click="_onExecuteAction(86)">Open Settings</button>
        </div>
        <nav class="btn-group o_cp_switch_buttons">
          <button t-if="views.length > 1"
                  t-foreach="views" t-as="view" t-key="view.type"
                  t-attf-class="btn btn-secondary fa fa-lg {{view.icon}}"
                  t-on-click="_onViewClicked(view.type)"/>
        </nav>

    </div>

</templates>
